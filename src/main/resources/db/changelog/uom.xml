<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="UOM-001" author="Aahz Brut">
        <createSequence schemaName="REPOSITORY" sequenceName="UOM_SEQ" startValue="0"/>
    </changeSet>

    <changeSet id="UOM-002" author="Aahz Brut">
        <createTable schemaName="REPOSITORY" tableName="UOM">
            <column name="UOM_ID" type="INT" defaultValueSequenceNext="REPOSITORY.UOM_SEQ">
                <constraints primaryKey="true" primaryKeyName="UOM_PK"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>